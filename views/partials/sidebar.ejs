<style>
  /* Sidebar Styling - IDVE Colors */
  .sidebar {
    width: 260px;
    background: linear-gradient(180deg, #1e3a8a 0%, #172554 100%);
    color: #ffffff;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    box-shadow: 2px 0 12px rgba(0, 0, 0, 0.35);
  }
  
  .sidebar-header {
    padding: 20px 16px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.12);
  }

  .sidebar-logo {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
  }

  .sidebar-logo-icon {
    position: relative;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    background: rgba(96, 165, 250, 0.15);
    border-radius: 8px;
  }

  .sidebar-logo-icon svg {
    width: 24px;
    height: 24px;
    color: #60a5fa;
  }

  .sidebar-logo-text h1 {
    font-size: 18px;
    font-weight: 700;
    color: #ffffff;
    margin: 0;
    letter-spacing: -0.3px;
  }

  .sidebar-logo-text p {
    font-size: 11px;
    color: #94a3b8;
    margin: 2px 0 0 0;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .sidebar-header-subtitle {
    font-size: 11px;
    color: #cbd5e1;
    font-weight: 400;
    letter-spacing: 0.3px;
  }
  
  .sidebar-header h1 {
    font-size: 24px;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 4px;
    letter-spacing: -0.5px;
  }
  
  .sidebar-header p {
    font-size: 12px;
    color: #cbd5e1;
  }
  
  .sidebar-nav {
    flex: 1;
    overflow-y: auto;
    padding: 12px;
  }
  
  .sidebar-nav a {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    margin-bottom: 4px;
    border-radius: 6px;
    color: #e0e7ff;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .sidebar-nav a:hover {
    background: rgba(255, 255, 255, 0.1);
    color: #ffffff;
  }
  
  .sidebar-nav a.active {
    background: rgba(96, 165, 250, 0.2);
    color: #60a5fa;
    font-weight: 600;
    border-left: 3px solid #60a5fa;
    padding-left: 13px;
  }
  
  .sidebar-nav a svg {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
  }
  
  .sidebar-footer {
    padding: 16px;
    border-top: 1px solid rgba(255, 255, 255, 0.12);
  }
  
  .sidebar-user {
    display: flex;
    align-items: center;
    gap: 12px;
  }
  
  .sidebar-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 16px;
    box-shadow: 0 2px 8px rgba(59, 130, 246, 0.3);
  }
  
  .sidebar-user-info h3 {
    font-size: 13px;
    color: #ffffff;
    margin-bottom: 2px;
    font-weight: 600;
  }
  
  .sidebar-user-info p {
    font-size: 11px;
    color: #cbd5e1;
  }
  
  .sidebar-logout {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px 16px;
    margin-top: 12px;
    background: rgba(239, 68, 68, 0.1);
    color: #fca5a5;
    text-decoration: none;
    border-radius: 6px;
    font-size: 13px;
    font-weight: 500;
    transition: all 0.2s;
  }
  
  .sidebar-logout:hover {
    background: rgba(239, 68, 68, 0.2);
    color: #fecaca;
  }
  
  .sidebar-logout svg {
    width: 16px;
    height: 16px;
  }
</style>

<!-- Sidebar -->
<aside class="sidebar">
  <div class="sidebar-header">
    <div class="sidebar-logo">
      <div class="sidebar-logo-icon">
        <svg data-lucide="globe"></svg>
      </div>
      <div class="sidebar-logo-text">
        <h1>NDash</h1>
        <p>PowerDNS Manager</p>
      </div>
    </div>
  </div>
  
  <nav class="sidebar-nav">
    <a href="/" class="<%= page === 'dashboard' ? 'active' : '' %>">
      <svg data-lucide="layout-dashboard"></svg>
      Dashboard
    </a>
    <a href="/zones" class="<%= page === 'zones' ? 'active' : '' %>">
      <svg data-lucide="globe"></svg>
      DNS Zones
    </a>
    <a href="/split-horizon" class="<%= page === 'split-horizon' ? 'active' : '' %>">
      <svg data-lucide="git-branch"></svg>
      Split-Horizon DNS
    </a>
    <a href="/statistics" class="<%= page === 'statistics' ? 'active' : '' %>">
      <svg data-lucide="bar-chart-3"></svg>
      Statistics
    </a>
    <a href="/settings" class="<%= page === 'settings' ? 'active' : '' %>">
      <svg data-lucide="settings"></svg>
      Settings
    </a>
  </nav>
  
  <div class="sidebar-footer">
    <div class="sidebar-user">
      <div class="sidebar-avatar"><%= (typeof username !== 'undefined' ? username.charAt(0).toUpperCase() : 'A') %></div>
      <div class="sidebar-user-info">
        <h3><%= typeof username !== 'undefined' ? username : 'Admin' %></h3>
        <p>Logged in</p>
      </div>
    </div>
    <a href="/logout" class="sidebar-logout">
      <svg data-lucide="log-out"></svg>
      Logout
    </a>
  </div>
</aside>
