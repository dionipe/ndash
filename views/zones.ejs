  function closeEditRecordModal() {
    document.getElementById('editRecordModal').classList.remove('show');
    document.getElementById('editRecordForm').reset();
    appState.editingRecord = null;
  }

  async function submitEditRecord(event) {
    event.preventDefault();
    
    if (!appState.editingRecord) return;
    
    const newTTL = document.getElementById('editRecordTTL').value;
    const newContent = document.getElementById('editRecordContent').value.trim();
    const zoneId = appState.currentZoneId;
    
    if (!newTTL || !newContent) {
      showError('Please fill in all required fields');
      return;
    }
    
    try {
      const payload = {
        rrsets: [{
          name: appState.editingRecord.name,
          type: appState.editingRecord.type,
          ttl: parseInt(newTTL),
          changetype: 'REPLACE',
          records: [{
            content: newContent,
            disabled: false
          }]
        }]
      };
      
      const response = await fetch(`/api/servers/localhost/zones/${zoneId}`, {
        method: 'PATCH',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(payload)
      });
      
      if (!response.ok) {
        const responseText = await response.text();
        try {
          const error = JSON.parse(responseText);
          throw new Error(error.error || error.message || `API Error: ${response.status}`);
        } catch (e) {
          if (e.message && e.message.includes('API Error')) throw e;
          throw new Error(`API Error ${response.status}: ${responseText}`);
        }
      }
      
      closeEditRecordModal();
      // Reload zone details
      await viewZoneDetails(zoneId);
      showError('Record updated successfully!', 'success');
    } catch (error) {
      console.error('Error editing record:', error);
      showError(error.message);
    }
  }

