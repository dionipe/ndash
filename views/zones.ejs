<script>
  // Global app state
  let appState = {
    zones: [],
    currentZoneId: null,
    loading: false,
    error: null,
    editingRecord: null
  };

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', () => {
    lucide.createIcons();
    loadZones();

    // Parse URL query params
    const params = new URLSearchParams(window.location.search);
    const zoneId = params.get('zone');
    if (zoneId) {
      viewZoneDetails(zoneId);
    }

    // Add listener to zone name field to detect reverse zones
    const zoneNameInput = document.getElementById('zoneName');
    zoneNameInput.addEventListener('change', checkIfReverseZone);
    zoneNameInput.addEventListener('keyup', checkIfReverseZone);
  });

  // Load zones from API
  async function loadZones() {
    appState.loading = true;
    hideError();
    document.getElementById('forward-zones-loading').style.display = 'block';
    document.getElementById('reverse-zones-loading').style.display = 'block';
    document.getElementById('forward-zones-empty').style.display = 'none';
    document.getElementById('reverse-zones-empty').style.display = 'none';
    document.getElementById('forward-zones-table').style.display = 'none';
    document.getElementById('reverse-zones-table').style.display = 'none';
    
    try {
      const response = await fetch('/api/servers/localhost/zones');
      
      if (!response.ok) {
        throw new Error(`API error: ${response.status}`);
      }

      let zones = await response.json();
      
      // Fetch individual zone details to get record counts
      const zoneDetailsPromises = zones.map(z => 
        fetch(`/api/servers/localhost/zones/${z.id}`)
          .then(r => r.json())
          .then(detail => ({
            ...z,
            rrsets: detail.rrsets || []
          }))
          .catch(e => {
            console.error(`Error fetching zone ${z.id}:`, e);
            return { ...z, rrsets: [] };
          })
      );
      
      zones = await Promise.all(zoneDetailsPromises);
      appState.zones = zones;
      
      renderZones(zones);
      updateStats(zones);
      
    } catch (error) {
      console.error('Error loading zones:', error);
      showError(error.message);
      document.getElementById('forward-zones-loading').style.display = 'none';
      document.getElementById('reverse-zones-loading').style.display = 'none';
      document.getElementById('forward-zones-empty').style.display = 'block';
    } finally {
      appState.loading = false;
    }
  }

  function renderZones(zones) {
    // Separate forward and reverse zones
    const forwardZones = zones.filter(z => !z.name.includes('arpa'));
    const reverseZones = zones.filter(z => z.name.includes('arpa'));
    
    // Hide loading
    document.getElementById('forward-zones-loading').style.display = 'none';
    document.getElementById('reverse-zones-loading').style.display = 'none';
    
    // Render forward zones
    renderZoneTable(forwardZones, 'forward');
    
    // Render reverse zones
    renderZoneTable(reverseZones, 'reverse');
  }

  function renderZoneTable(zones, type) {
    const suffix = type === 'forward' ? 'forward' : 'reverse';
    const tbody = document.getElementById(`${suffix}-zones-tbody`);
    const emptyEl = document.getElementById(`${suffix}-zones-empty`);
    const tableEl = document.getElementById(`${suffix}-zones-table`);
    
    tbody.innerHTML = '';
    
    if (zones.length === 0) {
      emptyEl.style.display = 'block';
      tableEl.style.display = 'none';
      return;
    }
    
    zones.forEach(zone => {
      const row = document.createElement('tr');
      const records = zone.rrsets ? zone.rrsets.length : 0;
      row.innerHTML = `
        <td style="font-weight: 600;">${zone.name}</td>
        <td><span class="record-type-badge">${zone.kind}</span></td>
        <td>${zone.serial}</td>
        <td>${records}</td>
        <td style="text-align: right;">
          <button class="btn btn-secondary" onclick="viewZoneDetails('${zone.id}')" style="padding: 6px 12px; font-size: 12px; margin-right: 4px;">
            <svg data-lucide="eye" style="width: 14px; height: 14px; display: inline; margin-right: 4px;"></svg>
            View
          </button>
          <button class="btn btn-secondary" onclick="deleteZone('${zone.id}')" style="padding: 6px 12px; font-size: 12px; color: #dc2626;">
            <svg data-lucide="trash-2" style="width: 14px; height: 14px; display: inline; margin-right: 4px;"></svg>
            Delete
          </button>
        </td>
      `;
      tbody.appendChild(row);
    });
    
    emptyEl.style.display = 'none';
    tableEl.style.display = 'table';
    lucide.createIcons();
  }

  function updateStats(zones) {
    document.getElementById('stat-zones').textContent = zones.length;
    
    const totalRecords = zones.reduce((sum, z) => sum + (z.rrsets?.length || 0), 0);
    document.getElementById('stat-records').textContent = totalRecords;
  }

  function showError(message, type = 'error') {
    const errorBanner = document.getElementById('error-banner');
    const errorMessage = document.getElementById('error-message');
    errorMessage.textContent = message;
    
    if (type === 'success') {
      errorBanner.style.backgroundColor = '#c6f6d5';
      errorBanner.style.borderColor = '#9ae6b4';
      errorMessage.style.color = '#22543d';
    } else if (type === 'info') {
      errorBanner.style.backgroundColor = '#bfdbfe';
      errorBanner.style.borderColor = '#93c5fd';
      errorMessage.style.color = '#1e40af';
    } else {
      errorBanner.style.backgroundColor = '#fed7d7';
      errorBanner.style.borderColor = '#fc8181';
      errorMessage.style.color = '#742a2a';
    }
    
    errorBanner.style.display = 'flex';
    
    if (type === 'success' || type === 'info') {
      setTimeout(() => {
        hideError();
      }, 3000);
    }
  }

  function hideError() {
    document.getElementById('error-banner').style.display = 'none';
  }

  async function deleteZone(zoneId) {
    if (!confirm('Are you sure you want to delete this zone?')) return;
    
    try {
      const response = await fetch(`/api/servers/localhost/zones/${zoneId}`, {
        method: 'DELETE'
      });
      
      if (!response.ok) throw new Error('Failed to delete zone');
      
      await loadZones();
      showError('Zone deleted successfully!', 'success');
    } catch (error) {
      showError(error.message);
    }
  }

  function viewZonesList() {
    document.getElementById('zones-list-view').style.display = 'block';
    document.getElementById('zone-details-view').style.display = 'none';
  }

  async function viewZoneDetails(zoneId) {
    console.log('viewZoneDetails called with zoneId:', zoneId);
    try {
      const response = await fetch(`/api/servers/localhost/zones/${zoneId}`);
      if (!response.ok) throw new Error('Failed to load zone details');
      
      const zone = await response.json();
      console.log('Zone data received:', zone);
      appState.currentZoneId = zoneId;
      renderZoneDetails(zone);
      
      // Hide zones list, show details
      document.getElementById('zones-list-view').style.display = 'none';
      document.getElementById('zone-details-view').style.display = 'block';
      console.log('zone-details-view displayed');
      
      lucide.createIcons();
    } catch (error) {
      console.error('Error in viewZoneDetails:', error);
      showError(error.message);
    }
  }

  function renderZoneDetails(zone) {
    console.log('renderZoneDetails called with zone:', zone);
    
    // Set zone name title
    const zoneTitleEl = document.getElementById('zone-name-title');
    console.log('zone-name-title element:', zoneTitleEl);
    if (zoneTitleEl) zoneTitleEl.textContent = zone.name;
    
    // Set zone info
    const zoneNameEl = document.getElementById('zone-info-name');
    console.log('zone-info-name element:', zoneNameEl);
    if (zoneNameEl) zoneNameEl.textContent = zone.name;
    
    const zoneTypeEl = document.getElementById('zone-info-type');
    if (zoneTypeEl) zoneTypeEl.textContent = zone.kind;
    
    const zoneSerialEl = document.getElementById('zone-info-serial');
    if (zoneSerialEl) zoneSerialEl.textContent = zone.serial;
    
    const zoneDnssecEl = document.getElementById('zone-info-dnssec');
    if (zoneDnssecEl) zoneDnssecEl.textContent = zone.dnssec ? 'Enabled' : 'Disabled';
    
    // Render records
    renderZoneRecords(zone.rrsets || []);
  }

  function renderZoneRecords(rrsets) {
    const loadingEl = document.getElementById('zone-records-loading');
    const emptyEl = document.getElementById('zone-records-empty');
    const tableEl = document.getElementById('zone-records-table');
    const tbodyEl = document.getElementById('zone-records-tbody');
    
    loadingEl.style.display = 'none';
    
    if (rrsets.length === 0) {
      emptyEl.style.display = 'block';
      tableEl.style.display = 'none';
      return;
    }
    
    const records = [];
    rrsets.forEach(rrset => {
      if (rrset.records) {
        rrset.records.forEach(record => {
          records.push({
            name: rrset.name,
            type: rrset.type,
            ttl: rrset.ttl,
            content: record.content,
            disabled: record.disabled
          });
        });
      }
    });
    
    tbodyEl.innerHTML = records.map(record => `
      <tr>
        <td><strong>${record.name}</strong></td>
        <td><span class="record-type-badge">${record.type}</span></td>
        <td>${record.ttl}</td>
        <td><code style="background: #f7fafc; padding: 4px 8px; border-radius: 4px; font-size: 12px; word-break: break-all;">${record.content}</code></td>
        <td style="text-align: right;">
          <button class="btn btn-secondary" onclick="showViewRecordModal('${record.name.replace(/'/g, "\\'")}', '${record.type}', '${record.ttl}', '${record.content.replace(/'/g, "\\'")}')" style="padding: 6px 12px; font-size: 12px; margin-right: 4px;">
            <svg data-lucide="eye" style="width: 14px; height: 14px; display: inline; margin-right: 4px;"></svg>
            View
          </button>
          <button class="btn btn-secondary" onclick="showEditRecordModal('${record.name.replace(/'/g, "\\'")}', '${record.type}', '${record.ttl}', '${record.content.replace(/'/g, "\\'")}')" style="padding: 6px 12px; font-size: 12px; margin-right: 4px;">
            <svg data-lucide="edit" style="width: 14px; height: 14px; display: inline; margin-right: 4px;"></svg>
            Edit
          </button>
          <button class="btn btn-secondary" onclick="deleteRecord('${record.name.replace(/'/g, "\\'")}', '${record.type}')" style="padding: 6px 12px; font-size: 12px; color: #dc2626;">
            <svg data-lucide="trash-2" style="width: 14px; height: 14px; display: inline; margin-right: 4px;"></svg>
            Delete
          </button>
        </td>
      </tr>
    `).join('');
    
    tableEl.style.display = 'table';
    emptyEl.style.display = 'none';
    lucide.createIcons();
  }

  function showRecordDetails(name, type, ttl, content) {
    showError(`Record: ${name} (${type}) TTL: ${ttl} Content: ${content}`, 'info');
  }

  function showDeleteRecordConfirm(name, type) {
    if (!confirm(`Are you sure you want to delete ${type} record for ${name}?`)) return;
    showError(`Delete record functionality coming soon for ${name} (${type})`, 'info');
  }

  function showCreateZoneModal() {
    const modal = document.getElementById('createZoneModal');
    modal.classList.add('show');
  }

  // Check if zone name is a reverse zone (PTR)
  function checkIfReverseZone() {
    const zoneName = document.getElementById('zoneName').value.toLowerCase();
    const isReverseZone = zoneName.includes('in-addr.arpa') || zoneName.includes('ip6.arpa');
    
    const autoGenContainer = document.getElementById('autoGenerateIPContainer');
    if (isReverseZone) {
      autoGenContainer.style.display = 'block';
    } else {
      autoGenContainer.style.display = 'none';
      document.getElementById('autoGenerateIPs').checked = false;
    }
  }

  function closeCreateZoneModal() {
    const modal = document.getElementById('createZoneModal');
    modal.classList.remove('show');
    document.getElementById('createZoneForm').reset();
  }

  async function submitCreateZone(event) {
    event.preventDefault();
    
    const zoneName = document.getElementById('zoneName').value;
    const zoneType = document.getElementById('zoneType').value;
    const autoGenerateIPs = document.getElementById('autoGenerateIPs').checked;
    
    if (!zoneName || !zoneType) {
      showError('Please fill in all required fields');
      return;
    }
    
    try {
      const response = await fetch('/api/servers/localhost/zones', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          name: zoneName,
          kind: zoneType,
          nameservers: document.getElementById('zoneNameservers').value.split(',').map(s => s.trim()).filter(s => s)
        })
      });
      
      if (!response.ok) {
        const error = await response.json().catch(() => ({}));
        throw new Error(error.error || 'Failed to create zone');
      }

      const createdZone = await response.json();
      
      // Auto-generate PTR records if checkbox is checked
      if (autoGenerateIPs && zoneName.includes('in-addr.arpa')) {
        await autoGeneratePTRRecords(createdZone.id, zoneName);
        showError('Zone created and PTR records generated successfully!', 'success');
      } else {
        showError('Zone created successfully!', 'success');
      }
      
      closeCreateZoneModal();
      await loadZones();
    } catch (error) {
      showError(error.message);
    }
  }

  // Auto-generate PTR records for reverse zones
  async function autoGeneratePTRRecords(zoneId, zoneName) {
    try {
      // Extract the network part from the zone name (e.g., "103.142.214" from "214.142.103.in-addr.arpa")
      const parts = zoneName.replace('.in-addr.arpa', '').split('.').reverse();
      const networkPrefix = parts.join('.');
      
      // Generate records for IPs 1-254
      const recordsToCreate = [];
      for (let i = 1; i <= 254; i++) {
        const ipOctet = i.toString();
        recordsToCreate.push({
          name: `${ipOctet}.${zoneName}`,
          type: 'A',
          ttl: 3600,
          changetype: 'REPLACE',
          records: [
            {
              content: `${networkPrefix}.${i}`,
              disabled: false
            }
          ]
        });
      }

      // Create records in batches to avoid overwhelming the API
      const batchSize = 10;
      for (let i = 0; i < recordsToCreate.length; i += batchSize) {
        const batch = recordsToCreate.slice(i, i + batchSize);
        
        const patchResponse = await fetch(`/api/servers/localhost/zones/${zoneId}`, {
          method: 'PATCH',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            rrsets: batch
          })
        });

        if (!patchResponse.ok) {
          console.warn(`Warning: Some records may not have been created (batch ${Math.floor(i/batchSize) + 1})`);
        }
      }
    } catch (error) {
      console.error('Error auto-generating PTR records:', error);
      showError(`Zone created but auto-generation had issues: ${error.message}`, 'warning');
    }
  }

  // Close modal when clicking outside
  window.addEventListener('click', (event) => {
    const modal = document.getElementById('createZoneModal');
    if (event.target === modal) {
      closeCreateZoneModal();
    }
