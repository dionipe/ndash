  async function submitAddRecord(event) {
    event.preventDefault();
    
    const recordName = document.getElementById('recordName').value.trim();
    const recordType = document.getElementById('recordType').value;
    const recordTTL = document.getElementById('recordTTL').value;
    const recordContent = document.getElementById('recordContent').value.trim();
    const zoneId = appState.currentZoneId;
    
    if (!zoneId || !recordName || !recordType || !recordTTL || !recordContent) {
      showError('Please fill in all required fields');
      return;
    }
    
    try {
      // Find the zone to get its name
      const zones = appState.zones;
      const zone = zones.find(z => z.id === zoneId);
      if (!zone) {
        throw new Error('Zone not found');
      }
      
      // Build full record name (FQDN)
      let fullName = recordName;
      if (!recordName.endsWith('.')) {
        // Check if this is a reverse zone (in-addr.arpa)
        if (zone.name.includes('in-addr.arpa')) {
          // For reverse zones, if recordName is an IP address part (like "1"), 
          // prepend it directly to the zone name
          // e.g., "1" + "214.142.103.in-addr.arpa." = "1.214.142.103.in-addr.arpa."
          fullName = recordName + '.' + zone.name;
        } else {
          // For forward zones, append zone name normally
          fullName = recordName + '.' + zone.name;
        }
      }
      
      const payload = {
        rrsets: [{
          name: fullName,
          type: recordType,
          ttl: parseInt(recordTTL),
          changetype: 'REPLACE',
          records: [{
            content: recordContent,
            disabled: false
          }]
        }]
      };
      
      const response = await fetch(`/api/servers/localhost/zones/${zoneId}`, {
        method: 'PATCH',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(payload)
      });
      
      if (!response.ok) {
        const responseText = await response.text();
        try {
          const error = JSON.parse(responseText);
          throw new Error(error.error || error.message || `API Error: ${response.status}`);
        } catch (e) {
          if (e.message && e.message.includes('API Error')) throw e;
          throw new Error(`API Error ${response.status}: ${responseText}`);
        }
      }
      
      closeAddRecordModal();
      // Reload zone details
      await viewZoneDetails(zoneId);
      showError('Record added successfully!', 'success');
    } catch (error) {
      console.error('Error adding record:', error);
      showError(error.message);
    }
  }

