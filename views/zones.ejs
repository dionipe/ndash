  function showAddRecordModal() {
    const zoneId = appState.currentZoneId;
    const zones = appState.zones;
    const zone = zones.find(z => z.id === zoneId);
    
    const hintDiv = document.getElementById('zoneNameHint');
    if (zone) {
      if (zone.name.includes('in-addr.arpa')) {
        // Reverse zone (PTR records)
        hintDiv.innerHTML = `<strong>Reverse Zone (PTR):</strong> Enter only the IP part. For example, in zone <code>${zone.name}</code>, enter <code>1</code> for PTR record of 103.142.214.1`;
      } else {
        // Forward zone
        hintDiv.innerHTML = `<strong>Forward Zone:</strong> Enter subdomain name. For example, in zone <code>${zone.name}</code>, enter <code>www</code> to create <code>www.${zone.name}</code>`;
      }
    }
    
    document.getElementById('addRecordModal').classList.add('show');
  }

