    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&amp;display=swap');
        * { font-family: 'Inter', sans-serif; }
        
        /* Animated Background */
        @keyframes gradient {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
        
        .animated-gradient {
            background: linear-gradient(-45deg, #e0f2fe, #dbeafe, #e0e7ff, #f0f9ff);
            background-size: 400% 400%;
            animation: gradient 15s ease infinite;
        }
        
        /* Floating Animation */
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }
        
        .float-animation {
            animation: float 6s ease-in-out infinite;
        }
        
        /* Fade In Up Animation */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .fade-in-up {
            animation: fadeInUp 0.8s ease-out forwards;
        }
        
        .fade-in-up-delay-1 {
            opacity: 0;
            animation: fadeInUp 0.8s ease-out 0.2s forwards;
        }
        
        .fade-in-up-delay-2 {
            opacity: 0;
            animation: fadeInUp 0.8s ease-out 0.4s forwards;
        }
        
        /* Pulse Glow Animation */
        @keyframes pulseGlow {
            0%, 100% {
                box-shadow: 0 0 20px rgba(6, 182, 212, 0.3),
                           0 0 40px rgba(6, 182, 212, 0.2),
                           0 0 60px rgba(6, 182, 212, 0.1);
            }
            50% {
                box-shadow: 0 0 30px rgba(6, 182, 212, 0.5),
                           0 0 60px rgba(6, 182, 212, 0.3),
                           0 0 90px rgba(6, 182, 212, 0.2);
            }
        }
        
        .pulse-glow {
            animation: pulseGlow 2s ease-in-out infinite;
        }
        
        /* Wave Animation */
        @keyframes wave {
            0% {
                transform: scale(0.8);
                opacity: 0.8;
            }
            100% {
                transform: scale(1.5);
                opacity: 0;
            }
        }
        
        .wave {
            animation: wave 2s ease-out infinite;
        }
        
        .wave-delay-1 {
            animation-delay: 0.5s;
        }
        
        .wave-delay-2 {
            animation-delay: 1s;
        }
        
        /* Button Shine Effect */
        @keyframes shine {
            0% {
                left: -100%;
            }
            100% {
                left: 100%;
            }
        }
        
        .button-shine {
            position: relative;
            overflow: hidden;
        }
        
        .button-shine::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            animation: shine 3s infinite;
        }
        
        /* Floating Particles */
        @keyframes particle {
            0% {
                transform: translateY(0) translateX(0) scale(0);
                opacity: 0;
            }
            50% {
                opacity: 0.8;
            }
            100% {
                transform: translateY(-100vh) translateX(50px) scale(1);
                opacity: 0;
            }
        }
        
        .particle {
            position: absolute;
            width: 6px;
            height: 6px;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.8), transparent);
            border-radius: 50%;
            pointer-events: none;
        }
        
        .particle:nth-child(1) { left: 5%; animation: particle 12s infinite; animation-delay: 0s; }
        .particle:nth-child(2) { left: 15%; animation: particle 14s infinite; animation-delay: 2s; }
        .particle:nth-child(3) { left: 25%; animation: particle 11s infinite; animation-delay: 4s; }
        .particle:nth-child(4) { left: 35%; animation: particle 15s infinite; animation-delay: 1s; }
        .particle:nth-child(5) { left: 45%; animation: particle 13s infinite; animation-delay: 3s; }
        .particle:nth-child(6) { left: 55%; animation: particle 12s infinite; animation-delay: 5s; }
        .particle:nth-child(7) { left: 65%; animation: particle 14s infinite; animation-delay: 2s; }
        .particle:nth-child(8) { left: 75%; animation: particle 11s infinite; animation-delay: 4s; }
        .particle:nth-child(9) { left: 85%; animation: particle 13s infinite; animation-delay: 1s; }
        
        /* Responsive adjustments */
        @media (max-width: 1024px) {
            .animated-gradient {
                background: linear-gradient(-45deg, #e0f2fe, #dbeafe, #e0e7ff, #f0f9ff);
            }
        }
    </style>
